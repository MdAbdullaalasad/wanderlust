<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <h3>All Listings</h3>
        <!-- <form method="get" action="/listings/add">
        <button>Add New!</button>
        <br><br>
    </form> -->

      <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for(let list of allListings) { %>
            <a href="/listings/<%= list.id %>" class="div-link">
            <div class=" card listing-card" >
                <img src="<%= list.image.url %>" class="card-img-top" alt="listings-image" style="height: 20rem;" >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                       <b> <%= list.title %></b><br>
                         &#2547; <%= list.price.toLocaleString("en-IN") %>/Night
                    </p>
                </div>
            </div>
          </a>
        <% } %>
     </div>
    </body>