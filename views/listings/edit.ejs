<% layout("/layouts/boilerplate") %>

   <body>
      <div class="row">
         <div class="col-8 offset-2"><br><br>
            <h3>Edit form</h3><br>
            <form method="post" action="/listings/<%= list.id %>?_method=put" novalidate class="needs-validation">

               <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" name="listing[title]" value="<%= list.title %>" class="form-control" required>
                  <div class="invalid-feedback">
                     Give accurate information.
                 </div>
               </div>

               <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <textarea name="listing[description]" class="form-control" required><%= list.description %> </textarea>
                  <div class="invalid-feedback">
                     Give accurate information.
                 </div>
               </div>

               <div class="mb-3">
                  <label for="imageUrl" class="form-label">Image URL/link</label>
                  <textarea name="listing[image][url]" class="form-control" required><%= list.image.url %></textarea>
                  <div class="invalid-feedback">
                     Give accurate information.
                 </div>
               </div>

               <div class="row">
                  <div class="mb-3 col-md-4">
                     <label for="price" class="form-label">Price</label>
                     <input type="number" name="listing[price]" value="<%= list.price %>" class="form-control" required>
                     <div class="invalid-feedback">
                        Give accurate information.
                    </div>
                  </div>

                  <div class="mb-3 col-md-8">
                     <label for="location" class="form-label">Location</label>
                     <input type="text" name="listing[location]" value="<%= list.location %>" class="form-control" required>
                     <div class="invalid-feedback">
                        Give accurate information.
                    </div>
                  </div>
               </div>
               <div class="mb-3">
                  <label for="country" class="form-label">Country</label>
                  <input type="text" name="listing[country]" value="<%=list.country%>" class="form-control" required>
                  <div class="invalid-feedback">
                     Give accurate information.
                 </div>
               </div>

               <button class="btn add-btn">Add</button><br><br>
            </form>
         </div>
      </div>
   </body>