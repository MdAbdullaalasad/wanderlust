<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3"><br>
                <h3>
                    <%= list.title %>
                </h3>
                <div class="card mb-3 listing-card">
                    <img src="<%=list.image.url %>" class="card-img-top show-image" alt="listings-image">
                    <div class="card-body">
                        <%= list.description %>
                            <p class="card-text">
                            <ul>
                                <li>&#2547; <%= list.price.toLocaleString("en-IN") %>/Night
                                </li>
                                <li>
                                    <%= list.location %>
                                </li>
                                <li>
                                    <%= list.country %>
                                </li>
                            </ul>
                    </div>
                    <div class="show-btn">
                        <form action="/listings/<%= list.id %>/edit">
                            <button class="btn add-btn">Edit</button>
                        </form>
                        <form method="post" action="/listings/<%= list.id %>?_method=delete">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <h3>Add new Comments.</h3>

                            <form method="post" action="/listings/<%= list._id %>/reviews" novalidate
                                class="needs-validation">
                                <div class="mb-3">
                                    <label for="rating" class="form-label">Rating</label><br>
                                    <input type="range" class="form-range" min="1" max="5" name="review[rating]"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name:</label>
                                    <input type="text" name="review[name]" class="form-control" required>
                                    <div class="invalid-feedback">
                                        Give accurate information.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="comment" class="form-label">Comment:</label>
                                    <textarea type="text" name="review[comment]" class="form-control"
                                        required></textarea>
                                    <div class="invalid-feedback">
                                        Please fill the description.
                                    </div>
                                </div>
                                <button class="btn btn-outline-success">Submit</button>
                            </form>
                         
                        </div>
                    </div>
                    <div>
                        <hr>
                        <h4>All Reviews</h4>
                        <div class="row">
                        
                                <% for( review of list.reviews ) { %>
                                    <div class="card col-5 mb-3 ms-4">
                                       
                                            <div class="card-body">
                                           <h5 class="card-title"><%= review.name %></h5>
                                           <p class="card-text"><%= review.comment %> </p>
                                           <p class="card-text"><b><%= review.rating %></b> Stars</p>
                                           <form method="post" class="mb-3" action="/listings/<%= list.id %>/reviews/<%= review._id %>?_method=delete">
                                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                       </div>
                                       
                                    </div>
                                      
                                   <% } %>
                            
                            
                        </div>
                        
                        
                       </div>
                </div>
            </div>
        </div>

    </body>